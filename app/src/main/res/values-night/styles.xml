<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>
    <style name="HeadText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorPrimary</item>

    </style>

    <style name="MainScreen">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="BottomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="iconGravity">textTop</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>

    <style name="BottomButtonActivity" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="iconGravity">textTop</item>
        <item name="iconTint">?attr/colorOnBackground</item>
    </style>

    <style name="SearchButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rounded_edittext_night</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:drawablePadding">@dimen/gap</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="iconPadding">@dimen/gap</item>
        <item name="android:drawableStart">@drawable/search</item>

    </style>
</resources>